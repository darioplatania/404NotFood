<?xml version="1.0" encoding="UTF-8"?>

<project name="404NotFood" default="start-tomcat" basedir=".">
	<description>
		Script for Food Service
	</description>
	
    <target name="clean" description="clean except war">
    	<ant antfile="build-food.xml" target="clean" />
    </target>

    <target name="distclean" depends="clean" description="clean">
    	<ant antfile="build-food.xml" target="distclean" />        
    </target>
	
    <target name="deploy" depends="distclean" description="redoes everything">
    	<ant antfile="build-food.xml" target="redeployWS" />        
    </target>
	
	<target name="start-tomcat" description="starts tomcat">
	   	<ant antfile="tomcat-build.xml" target="start-tomcat" />
	</target>
		
	<target name="stop-tomcat" description="stops tomcat">
	  	<ant antfile="tomcat-build.xml" target="stop-tomcat" />
	</target>
	
</project>
